:root {
    /* Shared Variables */
    --canvas-dim-colour: rgba(117, 117, 117, 0.57);

    /* These variables should use ColourPalette.tss and a theme in the future */
    /* Procedure Toolbar */
    --toolbar-procedure-image-table: url("../../Art/UI/Biopsy Procedure/Procedure_Table_Sprite.png");
    --toolbar-procedure-image-patient-monitor: url("../../Art/UI/Biopsy Procedure/patient_Monitor_Sprite.png");
    --toolbar-procedure-image-patient: url("../../Art/UI/Biopsy Procedure/Patient_View_Sprite.png");
    --toolbar-procedure-image-front: url("../../Art/UI/Biopsy Procedure/Front_View_Sprite.png");
    --toolbar-procedure-image-bronchoscope: url("../../Art/UI/Biopsy Procedure/Bronchoscope_Sprite.png");
    --toolbar-procedure-image-bronch-monitor: url("../../Art/UI/Common/POI_Sprite.png"); 
    --toolbar-procedure-background-colour: #CCDBE6;
    --toolbar-procedure-background-colour-hover: #A1A7C4;
    --toolbar-procedure-background-colour-active: #CCDBE6;
    --toolbar-procedure-border-colour: rgba(0, 0, 0, 0);
    --toolbar-procedure-border-colour-hover: #1E4877;
    --toolbar-procedure-border-colour-active: #136FC1;
    --toolbar-procedure-image-tint-colour: #1E4877;
    --toolbar-procedure-image-tint-colour-hover: #1E4877;
    --toolbar-procedure-image-tint-colour-active: #136FC1;
    --toolbar-procedure-label-colour: #1E4877;
    --toolbar-procedure-label-colour-hover: #1E4877;
    --toolbar-procedure-label-colour-active: #136FC1;
    --toolbar-procedure-line-colour: #1E4877;

    /* POI Toolbar */
    --toolbar-poi-image-back: url("../../Art/UI/Common/Back_Arrow_Sprite.png");
    --toolbar-poi-image-poi: url("../../Art/UI/Common/POI_Sprite.png");
    --toolbar-poi-image-tint-colour: #1E4877;
    --toolbar-poi-image-tint-colour-hover: #1E4877;
    --toolbar-poi-image-tint-colour-active: #136FC1;
    --toolbar-poi-background-colour: #CCDBE6;
    --toolbar-poi-background-colour-hover: #A1A7C4;
    --toolbar-poi-background-colour-active: #CCDBE6;
    --toolbar-poi-background-colour-disabled: rgba(0, 0, 0, 0);
    --toolbar-poi-label-back-color: #1E4877;
    --toolbar-poi-label-back-color-hover: #1E4877;
    --toolbar-poi-label-back-color-active: #136FC1;
    --toolbar-poi-border-color: rgba(0, 0, 0, 0);
    --toolbar-poi-border-colour-hover: #1E4877;
    --toolbar-poi-border-colour-active: #136FC1;
    --toolbar-poi-border-colour-disabled: rgba(0, 0, 0, 0);
    --toolbar-poi-line-colour: #1E4877;

    /* Regular Toolbar */
    --toolbar-home-button-image: url("/Assets/Art/UI/Common/home.png");
    --toolbar-back-button-image: url("/Assets/Art/UI/Common/Back_Arrow_Sprite.png");
    --toolbar-handbook-button-image: url("/Assets/Art/UI/Common/Handbook_Sprite.png");
    --toolbar-background-colour: rgba(0, 0, 0, 0);
    --toolbar-btn-background-colour: #CCDBE6;
    --toolbar-btn-background-colour-hover: #1E4877;
    --toolbar-btn-border-colour: #1E4877;
    --toolbar-btn-border-colour-hover: #CCDBE6;
    --toolbar-image-tint-colour: #1E4877;
    --toolbar-image-tint-colour-hover: #CCDBE6;

     /* Cards */
    --card-image-placeholder: url("../../VELCRO UI/Sprites/Icons/Default_Sprite.png");
    --card-image-checkmark: url("/Assets/Art/Images/Icons/Checkmark.png");
    --card-image-tint-colour: #FFFFFF;
    --card-background-colour: #E5EAEE;
    --card-background-colour-hover: #AFBFCA;
    --card-border-colour: rgba(0, 0, 0, 0);
    --card-border-colour-hover: #1E4877;
    --card-label-colour: #212232;

    /* Inventory Variables */
    --inventory-background-colour: #CCDBE6;

    /* Category Buttons */
    --inventory-btn-category-colour: rgba(0, 0, 0, 0);
    --inventory-btn-category-colour-hover: #A1A7C4;
    --inventory-btn-category-border-colour: #212232;
    --inventory-btn-category-border-colour-hover: #212232;
    --inventory-btn-category-border-colour-active: #1E4877;
    --inventory-btn-category-label-colour: #212232;
    --inventory-btn-category-label-colour-hover: #212232;
    --inventory-btn-category-label-colour-active: #1E4877;

    /* Inventory Content Bar */
    --inventory-contentbar-image-cart: url("/Assets/Art/Images/Icons/cart.png");
    --inventory-contentbar-left-background-colour: #757575;
    --inventory-contentbar-right-background-colour: #AFBFCA;
    --inventory-contentbar-label-contents: #1E4877;
    --inventory-contentbar-label-total: #1E4877;

    /* Inventory Misc Text */
    --inventory-panelcontainer-label-info: #979797;
    --inventory-panelcontainer-label-amount: #979797;

    /*Inventory Progress Bar*/
    --inventory-progress-bar-background-colour: #707070;
    --inventory-progress-bar-background-colour-progress: rgb(75, 193, 126);

    /* Modal */
    --modal-image-background: url("../../Art/UI/Modals/ModalNPCBackground_Sprite.png");
    --modal-image-background-tint-colour: #AFBFCA;
    --modal-image-note-background-tint-colour: #1E4877;
    --modal-background-colour: #CCDBE6;
    --modal-label-title-colour: #212232;
    --modal-label-description-colour: #212232;
    --modal-label-sub-description-colour: #212232;
    --modal-label-note-colour: #1E4877;

    /* Biopsy Procedure Ending Modal */
    --modal-end-label-title-colour: #FFFFFF;
    --modal-end-label-description-colour: #B3B3B3;
    --modal-biopsy-end-menu-btn-colour: #E1E1E1;
    --modal-image-button-arrow: url("../../VELCRO UI/Sprites/Arrows/ArrowRight_Sprite.png");
    --modal-image-arrow-tint-colour: #FFFFFF
    --modal-image-line: url("../../Art/UI/Modals/Line_Modal_Biopsy_End.png");
    
    /* Object Viewer */
    --objectviewer-image-rotate: url("/Assets/Art/UI/Object Viewer/click_to_rotate.png");
    --objectviewer-image-zoom: url("/Assets/Art/UI/Object Viewer/zoom_in_out.png");
    --objectviewer-image-tint-colour: #212232;
    --objectviewer-background-colour: #CCDBE6;
    --objectviewer-border-color: #757575;
    --objectviewer-label-rotate-colour: #212232;
    --objectviewer-label-zoom-colour: #212232;
    --objectviewer-label-name-colour: #212232;
    --objectviewer-label-description-colour: #212232;
 
    /* Main Menu */
    --mm-background-image: url("/Assets/Art/UI/Main Menu/main-menu-background.png");
    --mm-background-colour: rgba(60, 60, 60, 0.9);

    /* Main Menu Level Select */
    --mm-ls-background-colour:  #000000;
    --mm-image-biopsy: url("/Assets/Art/UI/Menus/BiopsyFemaleIcon.png");
    --mm-image-orientation: url("/Assets/Art/UI/Menus/OrientationIcon.png");

    /* Prompts */
    --prompt-image-close: url("../../VELCRO UI/Sprites/Arrows/ArrowRight_Sprite.png");
    --prompt-image-close-tint-colour: #212232;
    --prompt-btn-background-colour: rgba(255, 255, 255, 0.4);
    --prompt-btn-background-colour-hover: #E5EAEE;
    --prompt-btn-border-colour: rgba(0, 0, 0, 0);
    --prompt-btn-border-colour-active: #212232;
    --prompt-image-background-colour: rgba(255, 255, 255, 0.4);
    --prompt-image-border-colour: #FFFFFF;
    --prompt-background-colour: #BAC7D0;
    --prompt-bar-colour: #FFFFFF;
    --prompt-label-speaker-colour: #FFFFFF;
    --prompt-label-message-colour: #212232;

    /*Scenerio menu color and image*/
    --scenerio-image: url("/Assets/Art/UI/Menus/BiopsyFemaleIcon.png");
    --scenerio-menu-back-image: url("/Assets/Art/UI/Common/Back_Arrow_Sprite.png");
    --scenario-background-colour: #CCDBE6;
    --scenario-label-color: #212232;
    --scenario-btn-category-border-colour-hover: #212232;
    --scenario-btn-category-border-colour-active: #1E4877;

    /* Patient Monitor */
    --patient-monitor-background-colour: #CCDBE6;
    --patient-monitor-label-colour: #1E4877;
    --patient-monitor-btn-container-background-colour: #1E4877;
    --patient-monitor-btn-border-colour: #CCDBE6;
    --patient-monitor-btn-proceed-background-colour: #4BC17E;
    --patient-monitor-btn-proceed-label-colour: #000000;
    --patient-monitor-btn-proceed-background-colour-hover: #48A370;
    --patient-monitor-btn-proceed-label-colour-hover: #FFFFFF;
    --patient-monitor-btn-pause-background-colour: #B00020;
    --patient-monitor-btn-pause-label-colour: #FFFFFF;
    --patient-monitor-btn-pause-background-colour-hover: #950B24;
    --patient-monitor-btn-pause-label-colour-hover: #000000;
    --patient-monitor-btn-back-icon: url("/Assets/VELCRO UI/Sprites/Arrows/ArrowBack_Sprite.png");
    --patient-monitor-checkbox-checkmark: url("/Assets/VELCRO UI/Sprites/Checkmarks/Checkmark_Rounded_Sprite.png");

    /* TODO: This can be deleted as it can be created with Modal.cs and ModalSO.cs */
    /* Welcome Screen */
    --ws-text-color: #212232;
    --ws-star-image: url("/Assets/Art/UI/Common/StarImage.png");
    --ws-npc-orientation-image: url("/Assets/Art/UI/Common/NPC_Orientation.png");

    /* Bronch Monitor Controller */
    --bronch-monitor-control-panel-color: #CCDBE6;
    --bronch-monitor-control-title-colour: #212232;

    /* Restart modal */
    --restart-canvas-background-colour: rgba(0, 0, 0, 0.7);
    --restart-modal-description-text-color: #212232;

    /* Notication Icons*/
    --notification-background-image-info: url(../../Art/UI/Notification/info.png);
    --notification-background-image-success: url(../../Art/UI/Notification/Vector.png);
    --notification-background-image-error:url(../../Art/UI/Notification/warning.png);

    /* Handbook */
    --handbook-label-colour: #1E4877;
    --handbook-right-background-colour: #E5EAEE;
    --handbook-glow-colour: #212232;
    --handbook-left-border-colour: #1E4877;
    --handbook-physician-image: url(../../Art/UI/Modals/ModalNPC_1_Sprite.png);
    --handbook-monitor_icon: url(../../Art/UI/Handbook/HandbookMonitorIcon.png);
    --handbook-progress_icon: url(../../Art/UI/Handbook/HandbookProgressIcon.png);
    --handbook-table_icon: url(../../Art/UI/Handbook/HandbookTableIcon.png);
    --handbook-glossary_icon: url(../../Art/UI/Handbook/HandbookGlossaryIcon.png);
    --handbook-btn-background-colour: #E5EAEE;
    --handbook-btn-background-colour-hover: #A1A7C4;
    --handbook-btn-background-selected-colour: #1E4877;
    --handbook-btn-text-colour: #212232;
    --handbook-btn-text-colour-hover: #212232;
    --handbook-btn-text-colour-selected: #E5EAEE;

    /* Handbook Progress Section */
    --handbook-progress-completed: #4BC17E;

    /* Handbook Monitor Section */
    --handbook-monitor-image: url(../../Art/UI/Handbook/HandbookMonitorImage.png);
    --handbook-monitor-scrollbar-tracker-colour: rgba(135, 150, 164, 0.5);

    /* Handbook Procedure Table Section */
    --handbook-table-circle-background-colour: #1E4877;
    --handbook-table-circle-border-colour: #FFFFFF;
    --handbook-table-circle-label-colour: #FFFFFF;
    --handbook-table-legend-label-colour: #212232;
    --handbook-table-image: url(../../Art/UI/Handbook/HandbookProcedureTableImage.png);
    
    /* Patient Status */
    --status-window-title-text-colour: #1E4877;
    --status-window-description-text-colour: #212232;
    --status-background-colour: #AFBFCA;
    --status-bar-colour: #FFFFFF;
}
